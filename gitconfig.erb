[user]
<% unless $template_vars['git_name'].empty? %>
  name = <%= $template_vars['git_name'] %>
<% end %>
<% unless $template_vars['git_email'].empty? %>
  email = <%= $template_vars['git_email'] %>
<% end %>

[alias]
  co = checkout
  ci = commit
  cm = commit -m
  st = status -sb
  lol = log --pretty=oneline --abbrev-commit --graph --decorate
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%%an>%Creset' --abbrev-commit
  lgp = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%%an>%Creset' --abbrev-commit -p
  unstage = reset HEAD
  aa = add .
  # Not yet added - doesn't include ignored files
  new = ls-files --others --exclude-standard
  # Files that are in the staging area
  added = diff --cached --name-only
  today = log --stat --since='1 Day Ago' --graph --pretty=oneline --abbrev-commit --date=relative
  ff = merge --ff-only
  pullsubs = submodule foreach git pull origin master
  tags = tag -l
  branches = branch -a
  remotes = remote -v

[core]
  pager = less
  editor = vim
  quotepath = false
  excludesfile = ~/.gitignore

[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto
  ui = auto

[github]
<% unless $template_vars['github_username'].empty? %>
  user = <%= $template_vars['github_username'] %>
<% end %>
<% unless $template_vars['github_api_token'].empty? %>
  token = <%= $template_vars['github_api_token'] %>
<% end %>

[merge]
  tool = <%= File.exists?('/usr/bin/opendiff') ? 'opendiff' : 'vimdiff' %>

[diff]
  # For Github-style word diffs
  wordRegex = [^[:space:]]

[help]
  autocorrect = 1

[push]
  # Push current branch even if you've never pushed it before
  default = current

